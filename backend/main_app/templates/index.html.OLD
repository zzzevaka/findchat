<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="css/bootstrap.min.css" rel="stylesheet">
    <link href="css/clean-blog.css" rel="stylesheet">
    {% block local-css %}
    <link rel="stylesheet" type="text/css" href="slick/slick.css">
    <link rel="stylesheet" type="text/css" href="slick/slick-theme.css">
    <link rel="stylesheet" href="nivo-lightbox/nivo-lightbox.css">
    <link rel="stylesheet" href="css/photoalbum.css">
    {% end %}
    {% block title %}
    <title>{{ person.firstname }} {{ person.lastname }}</title>
    {% end %}
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-default navbar-custom navbar-fixed-top">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header page-scroll">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    Menu <i class="fa fa-bars"></i>
                </button>
                <a class="navbar-brand" href="index.html">Project name</a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <a href="/chat_wall">conversations</a>
                    </li>
                    <li>
                        <a href="/people">people</a>
                    </li>
                    <li>
                        <a href="/chats">my chats</a>
                    </li>
                    <li>
                        <a href="contact.html">Settings</a>
                    </li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>
    {% block wrapped %}
    <div class="container" id="wrapped">
        <div class="row">
            <div class="col-sm-3 col-sm-offset-3 lala">
                {% if person.avatar %}
                <a href="{{ person.avatar.large }}">
                    <img class="img-responsive" src="{{ person.avatar.medium }}">
                </a>
                {% else %}
                <img class="img-responsive" src="/img/ava-dummy.png">
                {% end %}
            </div>
            <div class="col-sm-3">
                <h3>{{ person.firstname }} {{ person.lastname }}, {{ person.age }} {{ person.sex }}</h3>
                <hr>
                <p>About: {% raw person.about_links %}</p>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6 col-sm-offset-3">
                <label>Photos: </label>
                {% if person.albums[0].pictures %}
                    <section class="slider">
                    {% for pic in person.albums[0].pictures %}
                    <div>
                        <a href="{{ pic.large }}">
                            <img class="photo" src="{{ pic.small }}" height="150"/>
                        </a>
                    </div>
                    {% end %}
                    </section>
                {% else %}
                <p>There are no photos</p>
                {% end %}
            </div>
        </div>
    </div>
    {% end %}
    <script src="js/jquery.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/clean-blog.min.js"></script>
    {% block local-js %}
    <script src="slick/slick.js"></script>
    <script src="nivo-lightbox/nivo-lightbox.min.js"></script>
    <script src="js/photoalbum.js"></script>
    {% end %}
</body>
</html>
